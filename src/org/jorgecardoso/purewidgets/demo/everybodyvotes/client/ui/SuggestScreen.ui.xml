<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:pw="urn:import:org.purewidgets.client.widgets"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">
	<ui:style>
	@external pwTextBoxTextbox, pwTextBoxCaptioncontainer, pwTextBoxCaptioncontainerCaption, pwTextBoxCaptioncontainerReferencecode, pwTextBoxCaret; 

 	.pollPanel  {
  		display:block;
		top: 0px;
		left: 0px;
		width:100%;
		height:100%;
  	}

	.textbox {
		position: absolute;
		top: 40%;
		left: 20%;
		right: 20%;
		bottom: 40%;
		
		
	}
	.pwTextBoxTextbox {
		
		background-color: white;
		color: white;
		border: 10px solid red;
		border-radius: 15px;
		box-shadow: 1px 1px 3px 3px #AAA;
	}

	.pwTextBoxCaptioncontainer {
		height:100%;
		width:100%;
	}

	.pwTextBoxCaptioncontainer td {
		vertical-align: middle !important;
	}
	.pwTextBoxCaptioncontainerCaption {
		font-size: 34pt;
		font-family: 'Nunito', sans-serif;
	}
	.pwTextBoxCaptioncontainerReferencecode {
		font-size: 34pt;
		font-family: 'Nunito', sans-serif;
	}
	.pwTextBoxCaret{
		position:relative;

		top: -5px;
		background-color: transparent;
		line-height: 50px;
		margin-left: 25px;
		margin-right: 10px;
		font-size: 40pt;
		width: 10px;
	}

  
	</ui:style>
	<g:HTMLPanel styleName="{style.pollPanel}">
	    

			<pw:PdTextBox styleName="{style.textbox}"/>


	</g:HTMLPanel>
</ui:UiBinder> 