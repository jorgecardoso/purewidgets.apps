<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:pw="urn:import:org.purewidgets.client.widgets">
	<ui:style>
	@external pwListbox, pwListboxTitle, pwListboxItem, pwListboxItemLabel, pwListboxItemReferencecode;


 	.pollPanel  {
  		display:block;
  	}

	.pollQuestionContainer {
		display: table;
		position: absolute;
		top: 50%;
		left: 0;
		height: 100%;
		width: 30%;
		margin: -50% 0 0 0;
	}
  	.pollQuestion  {
		display: table-cell;
		padding-left:15px;
		padding-right:5px;
		text-align:left;
		height: 100%;
		vertical-align: middle;
		font-size: 38pt;
		font-family: 'Nunito', sans-serif;
  	}

   .pollbox{
    	border: 15px solid black;
		border-radius: 20px;
		box-shadow: 5px 5px 3px 3px #aaa;
  		position: absolute;
		top: 50%;
		left: 50%;
		height: 70%;
		width: 40%;
		margin: -35% 0 0 -20%;
		text-align:center;
  }
	.closetime {
		position: absolute;
		bottom: 10%;
		left: 75%;
		width:20%;
		text-align:center;
	}
	.closetimelabel {
		font-size: 30pt;
		text-transform: uppercase;
		color:red;
		font-family: 'Nunito', sans-serif;
		
	}
	.closetimetime {
		font-family: 'Nunito', sans-serif;
		font-size: 34pt;
		background-color: red;
		color: white;
		border: 10px solid white;
		border-radius: 15px;
		box-shadow: 1px 1px 3px 3px #AAA;
	}
	.pwListbox {
		width:100%;
		border:none;
	}
	.pwListboxTitle {
		display:none;
		height:0px;
	}

	.pwListboxItem {
		margin-top: 15px;
		padding-left: 10px;
		padding-right:10px;
		
	}
	.pwListboxItemLabel {
		font-family: 'Nunito', sans-serif;

		font-size: 34pt;
	}
	.pwListboxItemReferencecode {
		font-family: 'Nunito', sans-serif;

		font-size: 34pt;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.pollPanel}">
	    <g:HTMLPanel styleName="{style.pollQuestionContainer}">
	    	<g:InlineLabel ui:field="labelQuestion" styleName="{style.pollQuestion}"/>
	    </g:HTMLPanel> 
	    <g:HTMLPanel styleName="{style.pollbox}">
	        <img align="center" src="ebv-pollbox.svg"/>
			<pw:PdListBox  />
		</g:HTMLPanel>
		<g:HTMLPanel styleName="{style.closetime}">
		    <g:Label styleName="{style.closetimelabel}">Vote Closing in about</g:Label>
		    <g:Label ui:field="labelCloseTime" styleName="{style.closetimetime}">1 day</g:Label>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 