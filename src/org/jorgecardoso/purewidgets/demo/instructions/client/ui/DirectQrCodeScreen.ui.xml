<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.main {
			width:100%;
			height:100%;
			margin-left:auto;
			margin-right:auto;
			text-align:center;
		}
		.main img {
			margin-left:auto;
			margin-right:auto;
			height:100%;
		}
		
	</ui:style>
	
	<g:HTMLPanel styleName="{style.main}">
	    <g:Image ui:field="qrCodeImage"></g:Image>
	</g:HTMLPanel>
		
</ui:UiBinder> 