<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.grid {

		}
		.grid td {
			font-weight: bold;
			font-family: 'Nunito', sans-serif;
			font-size: 5rem;
			
			text-align:center;
			padding:0px;
			margin:0px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Label ui:field="labelWord" />
		<g:Grid width="100%"  height="100%"  ui:field="gridWord" styleName="{style.grid}"/>
	</g:HTMLPanel>
</ui:UiBinder> 