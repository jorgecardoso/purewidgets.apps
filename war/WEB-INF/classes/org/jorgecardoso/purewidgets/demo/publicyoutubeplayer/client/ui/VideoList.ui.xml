<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default" >

<ui:style type='org.jorgecardoso.purewidgets.demo.publicyoutubeplayer.client.ui.VideoList.Style'>
.mainPanel {
	text-align:center;
	margin-top:10px;
	margin-left: auto;
	margin-right: auto;
	width: 100%;
}

.title {
	background-image: literal("-webkit-linear-gradient(top left, #FFFFFF 0%, #1CA312 150%)");
	font-size: 4rem;
	margin-left:auto;
	margin-right:auto;
	width:100%;
	padding-left:5px;
	font-family: 'Nunito', sans-serif;
	/*box-shadow: 2px 2px 1px 1px #ccc;
	border: 1px solid #ccc;*/
	height: 2rem;
	line-height: 1.4rem;
}

.cell {
	padding: 15px 20px 10px 20px;
	width:50%;
	horizontalAlign: center;
}

.left {

padding-left: 0px;
text-align:left;
}

.right {

padding-right:0px;
text-align:right;
}

</ui:style>
		
	<g:VerticalPanel width="100%">
	    <g:cell height="50px">
	    	<g:Label ui:field="uiLabelTitle" styleName="{style.title}"></g:Label>
		</g:cell>
		<g:cell width="100%">
			<g:Grid ui:field="uiMainPanel" styleName='{style.mainPanel}' />
  		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder> 

